<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Sherlock</title>
  <link href="/static/styles/login.css" rel="stylesheet">
  <link href="https://use.typekit.net/fjt0pow.css" rel="stylesheet">
  <link href="https://rsms.me/inter/inter.css" rel="stylesheet">
  <script src="/static/scripts/jquery/3.1.1.js"></script>
</head>
<body>

  <div class="container">
    <div class="header">
      <img src="/static/images/logo.svg" height="72px">
      <div class="title">Sherlock</div>
      <div class="errors"></div>
    </div>
    <div class="form">
      <form target="" id="form">
        <input id="username" type="text" placeholder="Username" name="username" required>
        <input id="password" type="password" placeholder="Password" name="password" required>
        <div class="submit">
          <input type="submit" value="Let's Go â†’">
        </div>
      </form>
    </div>
  </div>

  <script>
    $("#form").on("submit", function(event) {
      event.preventDefault();
      var username = $("#username").val();
      var password = $("#password").val();
      var payload = { username: username, password: password };

      if (!username || !password) {
        $(".errors").text('Please fill in all the fields').show();
        return;
      }

      $.post("/api/login", payload, function(data) {
        if (data.ok) {
          window.location.replace("/panel/me");
        } else {
          $(".errors").text(data.error).show();
          return;
        }
      });

      return;
    });
  </script>

</body>
</html>
