		<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/vue"></script>
	</head>

	<body>
		<div id="app" class="container">
			<div class="header">
				<img src="/static/images/logo.svg" height="72px" />
				<div class="title">Sherlock</div>
				<div v-if="error" class="errors">{{ errorMessage }}</div>
			</div>
			<div class="form">
				<form target="" id="form">
					<input
						v-model="username"
						id="username"
						type="text"
						placeholder="Username"
						name="username"
						required
					/>
					<input
						v-model="password"
						id="password"
						type="password"
						placeholder="Password"
						name="password"
						required
					/>
					<div class="submit">
						<input @click="handleSubmit" type="submit" value="Let's Go â†’" />
					</div>
				</form>
			</div>
		</div>

		<script>
			new Vue({
				el: "#app",
				data: {
					username: null,
					password: null,
					error: false,
					errorMessage: null
				},
				methods: {
					handleSubmit: function(event) {
						event.preventDefault();
						var payload = { username: this.username, password: this.password };
						if (!this.username || !this.password) {
							this.errorMessage = "Please fill in all the fields";
							return (this.error = true);
						}
						axios.post("/api/login", payload).then(response => {
							if (response.data.ok) {
								window.location.replace("/panel/me");
							} else {
								this.errorMessage = response.data.error;
								return (this.error = true);
							}
						});
					}
				}
			});
